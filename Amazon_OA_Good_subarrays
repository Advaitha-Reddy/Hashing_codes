#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int good_subarrays(vector<int>arr,int k){
	int n=arr.size();
	unordered_map<int,int>mpp;
	vector<int>p1(n);
	p1[0]=arr[0];
	for(int i=1;i<n;i++){
		p1[i]=p1[i-1]+arr[i];
	}
	
	int count=0;
	mpp[0]=1;
	for(int j=0;j<n;j++){
		int y=(p1[j]%k-j%k+k)%k;
		if(mpp.find(y)!=mpp.end()){
			count+=mpp[y];
		}
		
		mpp[y]++;
	}
	
	return count;
}
int main(){
	int n;
	cin>>n;
	
	vector<int>vec(n);
	for(int i=0;i<n;i++){
		cin>>vec[i];
	}
	
	int k;
	cin>>k;
	
	int count=good_subarrays(vec,k);
	cout<<"Number of good subarrays: "<<count<<endl;
	return 0;
}
